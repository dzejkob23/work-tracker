<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/button_min_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_min_vertical_padding</item>
        <item name="android:layout_marginStart">@dimen/screen_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/screen_horizontal_padding</item>
        <item name="android:textColor">@color/selector_button_primary_text</item>
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <!--  Text styles  -->

    <style name="Text" parent="TextAppearance.AppCompat" />
    <style name="Text.Stopwatch">
        <item name="android:textSize">48sp</item>
<!--        <item name="android:fontFamily">sans-serif-medium</item>-->
    </style>

</resources>
